<h2>Edit <%= @member.format_name %></h2>
<form method="POST" action="/members/<%= @member.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= @member.first_name %>"/>
    </div>

    <div class="form-el">
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name" value="<%= @member.last_name%>"/>
    </div>

    <div class="form-el">
      <label for="house_select">Select House:</label>
      <select name="house_id" id="house_select" selected="<%= @member.house_id %>">
        <% @houses.each do |house| %>
         <% if house.id == @member.house_id %>
         <option value=<%= house.id %> selected><%= house.name.capitalize %></option>
    </select>
    </div>

  </div>
</form>
        
